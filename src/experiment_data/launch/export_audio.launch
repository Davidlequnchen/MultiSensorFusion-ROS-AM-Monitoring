<launch>
  <node pkg="rosbag" type="play" name="rosbag" required="true" args="/media/chenlequn/Lequn_HD/Research_Projects/Acoustic_monitoring/data/11_Feb_test/test.bag"/>
  

  <!-- <node name="bag_to_wave" pkg="audio_utils" type="raw_file_writer_node_simtech.py">
    <param name="output_path" value="/media/chenlequn/Lequn_HD/Research_Projects/Acoustic_monitoring/data/11_Feb_test/test.wav" /> 
  </node> -->

  <arg name="device" default=""/>
  <arg name="ns" default="audio"/>
  <!-- <arg name="dst" default="alsasink"/> -->
  <arg name="dst" default="~/audio.wav"/>
  <arg name="do_timestamp" default="false"/>
  <arg name="format" default="wave"/>
  <arg name="channels" default="1"/>
  <arg name="sample_rate" default="44100"/>
  <arg name="sample_format" default="S16LE"/>

  <group ns="$(arg ns)">
  <node name="audio_play" pkg="audio_play" type="audio_play" output="screen">
    <param name="device" value="$(arg device)"/>
    <param name="dst" value="$(arg dst)"/>
    <param name="do_timestamp" value="$(arg do_timestamp)"/>
    <param name="format" value="$(arg format)"/>
    <param name="channels" value="$(arg channels)"/>
    <param name="sample_rate" value="$(arg sample_rate)"/>
    <param name="sample_format" value="$(arg sample_format)"/>
  </node>
  </group>

   
</launch>
